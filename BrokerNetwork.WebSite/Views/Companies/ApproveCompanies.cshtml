@model IEnumerable<BrokerNetwork.Models.Company>

@{
    ViewBag.Title = "الشركات الغير مفعلة";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>
        <div class="actions">
            <div class="dropdown actions__item">
                <i data-toggle="dropdown" class="zmdi zmdi-more-vert" aria-expanded="false"></i>
                <div class="dropdown-menu dropdown-menu-right">
                    @Html.ActionLink("اضافة شركة", "Create", null, new { @class = "dropdown-item" })
                </div>
            </div>
        </div>
    </div>
    <div class="card-block">
        <div class="table-responsive">
            <table id="data-table" class="table table-bordered">
                <thead class="thead-default">
                    <tr>

                        <th>
                            الشركة
                        </th>
                        <th>
                            نوع الشركة
                        </th>
                        <th>
                            بيانات الاتصال
                        </th>
                        <th>
                            تاريخ الانشاء
                        </th>
                        <th>
                            الخيارات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                <a href="@Url.Action("CompanyDetails", "Home", new { id = item.CompanyID })" title="@item.CompanyName">@item.CompanyName</a>
                            </th>
                            <th>
                                @item.CompanyType.CompanyTypeTitle
                            </th>
                            <th class="en-number">
                                @item.Contacts
                            </th>
                            <td class="en-number">
                                @string.Format("{0: d/M/yyyy}", item.EntryDate)
                            </td>
                            <td class="actions-btns">
                                <a href="@Url.Action("ApproveCompany", "Companies", new { companyID = item.CompanyID })">تفعيل الشركة</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>