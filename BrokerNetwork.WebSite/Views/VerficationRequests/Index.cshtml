@model IEnumerable<BrokerNetwork.Models.VerficationRequest>

@{
    ViewBag.Title = "توثيق الشركات";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>
        <div class="actions">
            <div class="dropdown actions__item">
                <i data-toggle="dropdown" class="zmdi zmdi-more-vert" aria-expanded="false"></i>
                <div class="dropdown-menu dropdown-menu-right">
                    @Html.ActionLink("طلب توثيق جديد", "VerficationRequest", null, new { @class = "dropdown-item" })
                </div>
            </div>
        </div>
    </div>
    <div class="card-block">
        <div class="table-responsive">
            <table id="data-table" class="table table-bordered">
                <thead class="thead-default">
                    <tr>
                        <th>
                            الشركة
                        </th>
                        <th>
                            حالة التوثيق
                        </th>
                        <th>
                            تاريخ الانشاء
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                <a href="@Url.Action("VerficationRequest", "VerficationRequests", new { id = item.VerficationID })" title="@item.Company.CompanyName">@item.Company.CompanyName</a>
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.VerficationStatu.VerfiedStatusTitle)
                            </th>
                            <td class="en-number">
                                @string.Format("{0: d/M/yyyy}", item.EntryDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>